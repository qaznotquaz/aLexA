<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="Director's Note">
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>
    <Appenders>
        <!-- File Appender -->
        <File name="FILE" fileName="${basePath}/Key.log" append="true">
            <PatternLayout pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="Notes" level="debug"/>
        <Root level="trace">
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>
</Configuration>